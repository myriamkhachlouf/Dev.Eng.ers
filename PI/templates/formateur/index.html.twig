
{% block title %}Formateur index{% endblock %}

{% block body %}
    <h1>Formateur index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Statut</th>
                <th>Typecontrat</th>
                <th>Email</th>
                <th>Password</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for formateur in formateurs %}
            <tr>
                <td>{{ formateur.id }}</td>
                <td>{{ formateur.nom }}</td>
                <td>{{ formateur.prenom }}</td>
                <td>{{ formateur.statut }}</td>
                <td>{{ formateur.typecontrat }}</td>
                <td>{{ formateur.email }}</td>
                <td>{{ formateur.password }}</td>
                <td>
                    <a href="{{ path('formateur_show', {'id': formateur.id}) }}">show</a>
                    <a href="{{ path('formateur_edit', {'id': formateur.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('formateur_new') }}">Create new</a>
{% endblock %}
